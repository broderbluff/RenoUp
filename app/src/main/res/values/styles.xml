<resources>

    <!-- Base application theme. -->


    


    <style name="Theme.Renoup" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_renoup</item>
        <item name="popupMenuStyle">@style/PopupMenu.Renoup</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Renoup</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Renoup</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Renoup</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Renoup</item>
        <item name="actionModeBackground">@drawable/cab_background_top_renoup</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_renoup</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Renoup</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:listViewStyle">@style/Theme.Renoup.LightGreenBackground</item>
        <item name="android:gridViewStyle">@style/Theme.Renoup.LightGreenBackground.GridView</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Renoup.Widget</item>

    </style>
<style name="Theme.Renoup.LightGreenBackground">
    <item name="android:background">@color/light_green_background</item>
</style>

    <style name="Theme.Renoup.LightGreenBackground.GridView">
        <item name="android:padding">@dimen/user_grid_spacing</item>

</style>

    <style name="ActionBar.Solid.Renoup" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_renoup</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_renoup</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_renoup</item>
        <item name="progressBarStyle">@style/ProgressBar.Renoup</item>
    </style>

    <style name="ActionBar.Transparent.Renoup" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_renoup</item>
        <item name="progressBarStyle">@style/ProgressBar.Renoup</item>
    </style>

    <style name="PopupMenu.Renoup" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_renoup</item>
    </style>

    <style name="DropDownListView.Renoup" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_renoup</item>
    </style>

    <style name="ActionBarTabStyle.Renoup" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_renoup</item>
    </style>

    <style name="DropDownNav.Renoup" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_renoup</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_renoup</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_renoup</item>
    </style>

    <style name="ProgressBar.Renoup" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_renoup</item>
    </style>

    <style name="ActionButton.CloseMode.Renoup" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_renoup</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Renoup.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Renoup</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Renoup</item>
    </style>


</resources>
